<Window x:Class="WPFhello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFhello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="HelloLabel" Content="Hello, WPF" HorizontalAlignment="Left" Margin="40,25,0,0" VerticalAlignment="Top" AutomationProperties.Name="HelloLabel" FontSize="36" FontFamily="Arial Rounded MT Bold" Background="White"/>
        <Button x:Name="btnHello" Content="Здрасти!" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Click="btnHello_On_Click" Margin="91,181,0,0"/>
        <Label x:Name="lblName" Content="Име:" HorizontalAlignment="Left" Margin="30,105,0,258" Width="83" FontSize="20" AutomationProperties.Name="lblName" FontFamily="Arial Rounded MT Bold"/>
        <TextBox x:Name="textName" HorizontalAlignment="Left" Margin="120,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <GroupBox x:Name="groupBoxElement" Header="****GroupBox****"/>
    </Grid>
</Window>
